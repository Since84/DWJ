<ul class="projects">
	<!-- <h2>Our Work</h2> -->
<% postlist = posts.posts %>
	<li class="project-container">
		<ul>
<% for( var p=0; p < postlist.length; p++ ){ %>
	
		<li class="project">
			<h3 class="project-name"><%= postlist[p].post_title %></h3>
			<h4 class="project-type"><%= postlist[p].project_type %></h4>
			<h4 class="project-date"><%= postlist[p].project_date %></h4>
			<p class="project-description open"><%= postlist[p].post_content %></p>
<% } %>
		</ul>
	</li>
	<li class="project-list">
		<ul>
<% for( var p=0; p < postlist.length; p++ ){ %>
			<li class="project-list-item">
				<h3 class="project-name"><%= postlist[p].post_title %></h3>
				<h4 class="project-date"><%= postlist[p].project_date %></h4>
			</li>
<% } %>
		</ul>
	</li>
</ul>
